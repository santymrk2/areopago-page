---
import {Image} from 'astro:assets'
import logo from '../assets/Logo.svg'
import logoSimple from '../assets/LogoSolo.svg'
---

<header class="py-8 px-4 mx-auto max-w-6xl lg:py-16 lg:px-6">
  <div class="w-full bg-white flex justify-center sm:justify-between content-center self-center rounded-md shadow-sm ">
    <a href="/">
      <Image 
        src={logo}
        alt="Logo Areopago"
        class="p-2 my-1 mx-4 h-14 hidden sm:block"
      />
      <Image 
      src={logoSimple}
      alt="Logo Areopago"
      class="mx-4 w-20 self-center sm:hidden"
    />
    </a>
    <nav class="hidden sm:block flex rounded-md justify-center self-center p-2 mx-4">
      <a class=" px-4 py-2 text-base font-semibold text-gray-900 rounded-lg hover:bg-gray-100 hover:text-areo-lightblue focus:z-10 focus:ring-2 focus:ring-areo-lightblue focus:text-areo-lightblue" href="/">Inicio</a>
      {/* <a class="px-4 py-2 text-base font-semibold text-gray-900 rounded-lg hover:bg-gray-100 hover:text-areo-lightblue focus:z-10 focus:ring-2 focus:ring-areo-lightblue focus:text-areo-lightblue" href="/about">Nosotros</a> */}
      <a class=" px-4 py-2 text-base font-semibold text-gray-900 rounded-lg hover:bg-gray-100 hover:text-areo-lightblue focus:z-10 focus:ring-2 focus:ring-areo-lightblue focus:text-areo-lightblue" href="/camp23">Retiro23</a>
